    #			if source ~ [ RTS_STATIC, RTS_BGP ]
    #			then accept;
    #			else reject;
    #		};
    #	};

    #	ipv6 multicast {	# IPv6 multicast topology (2/2)
    #		table mrib6;	# explicit IPv6 table
    #		import filter rt_import;
    #		export all;
    #	};

    ipv6 {
            import filter {accept;};
            export filter {accept;};
    };
}
