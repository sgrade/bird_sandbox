protocol bgp bgp_{{ peer_name }} {

    #	description "My BGP uplink";
    local as 6452{{ tags.vm_index }};

    neighbor {{ peer.peer_ipv6_address }} as {{ peer.asn }};

    #	hold time 90;		# Default is 240

